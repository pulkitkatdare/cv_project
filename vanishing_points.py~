	for j in range(N[0]):
		x_mid = ((line[I,0] +line[I,2])/2);
		y_mid = ((line[I,1] +line[I,3])/2);
		x_1  = line[I,0];
		y_1  = line[I,1];
		x_2  = line[I,2];
		y_2  = line[I,3];
		length1 = math.sqrt((x_1-x_2)**2 + (y_1-y_2)**2);
		length2 = math.sqrt((x_mid-x_int)**2 + (y_mid-y_int)**2);
		d_1 = math.acos(((x_1-x_2)*(x_int - x_mid) + (y_1-y_2)*(y_int-y_mid))/(length1*length2));
		if (d_1 > (math.pi)/2):
			d_1 = math.pi - d_1;
		x_mid = ((line[J,0] +line[J,2])/2);
		y_mid = ((line[J,1] +line[J,3])/2);
		x_1  = line[J,0];
		y_1  = line[J,1];
		x_2  = line[J,2];
		y_2  = line[J,3];
		length1_J = math.sqrt((x_1-x_2)**2 + (y_1-y_2)**2);
		length2 = math.sqrt((x_mid-x_int)**2 + (y_mid-y_int)**2);
		d_2 = math.acos(((x_1-x_2)*(x_int - x_mid) + (y_1-y_2)*(y_int-y_mid))/(length1_J*length2));
		if (d_2 > (math.pi)/2):
			d_2 = math.pi - d_1;		
